{
    "name": "cryptoscopos-api",
    "version": "0.0.1",
    "description": "The Backend API for the Cryptoscopos cryptocurrency watcher",
    "main": "server.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "start": "node dist/src/index.js",
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "postinstall": "npx prisma generate && npm run build",
        "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "lint": "eslint . --ext .ts",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gramanicu/cryptoscopos-api.git"
    },
    "author": "Grama Nicolae",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/gramanicu/cryptoscopos-api/issues"
    },
    "homepage": "https://github.com/gramanicu/cryptoscopos-api#readme",
    "dependencies": {
        "@prisma/client": "^3.12.0",
        "axios": "^0.26.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-oauth2-jwt-bearer": "^1.1.0",
        "helmet": "^5.0.2",
        "luxon": "^2.3.2",
        "node-cron": "^3.0.0"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/luxon": "^2.3.1",
        "@types/node": "^17.0.24",
        "@types/node-cron": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "prettier": "^2.6.2",
        "prisma": "^3.12.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.3"
    }
}
