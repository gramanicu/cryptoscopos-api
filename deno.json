{
    "compilerOptions": {
        "allowJs": false,
        "lib": ["deno.window"],
        "strict": true
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": ["no-unused-vars", "no-explicit-any"]
        }
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 80,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}
